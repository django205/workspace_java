package hackerEarth;
import java.util.*;
public class ArrayManipulation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		  Scanner in = new Scanner(System.in);
	        int n = in.nextInt();
	        int m = in.nextInt();
	         int arr[]=new int[n+2];
	         for(int i=0;i<n;i++){
	        	 arr[i]=0;
	         }
	        for(int a0 = 0; a0 < m; a0++){
	            int a = in.nextInt();
	            int b = in.nextInt();
	            int k = in.nextInt();
	            a--;
	            b--;
	       while(a<=b){
	           arr[a]=arr[a]+k;
	          a++;
	       }  
	     
	        }
	        in.close();
	        
	        int max=arr[0];
	       for(int i=1;i<n;i++){
	           if(max<arr[i]) max=arr[i];
	       }
	       System.out.println(max);
	}

}
